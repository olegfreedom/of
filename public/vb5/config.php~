    //    ****** Базовая ссылка ******
    // Следующие параметры определяют все ссылки на Ваш форум.
    // Если Вы укажите некорректное значение, то сайт будет работать неправильно.
    // Не добавляйте слеша ("/") в конце ссылки.

    // Это ссылка к корневой директории vBulletin
$config['baseurl'] = 'http://www.vash-site.com/dir';


    // Этот параметр используется только в том случае, если Вы желаете требовать авторизацию по https.
    // В большинстве случаев Вам не потребуется изменять значение этого параметра.
$config['baseurl_login'] = $config['baseurl'];

    // Если Вы желаете использовать авторизацию по https, то раскомментируйте эту строку
    // и укажите путь с https.
//$config['baseurl_login'] = 'https://www.vash-site.com/dir';


    //    ****** Системные пути ******

    // Этот параметр позволяет изменить название директории с панелью администратора
$config['admincpdir'] = 'admincp';

    //    ****** Параметры cookie ******

    // Этот параметр позволяет изменить префикс, которые будут иметь все cookie
$config['cookie_prefix'] = 'bb';


    //    ****** Специальные параметры ******
    // Эти параметры используются в исключительных случаях
    // Пожалуйста, не изменяйте их, если не понимаете, что они означают.

    // Просто проигнорируйте этот параметр.
$config['cookie_enabled'] = true;

$config['report_all_php_errors'] = false;
$config['no_template_notices'] = true;

    // Этот параметр никогда не должен быть включенным на рабочем сайте
$config['no_js_bundles'] = false;

    // Этот параметр включает режим отладки. НИКОГДА не включайте его на рабочем сайте
$config['debug'] = false;

    // Этот параметр получает местоположение директории core. 
    // По умолчанию предполагается, что директория находится там же, где и этот файл конфигурации.
    // Если это не так - укажите здесь, где находится Ваша директория core.
$config['core_path'] = realpath(dirname(__FILE__)) . '/core';

    // Это ссылка на директорию core
$config['baseurl_core'] = $config['baseurl']  .  '/core';


